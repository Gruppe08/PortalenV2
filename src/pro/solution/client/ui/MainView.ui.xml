<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.north {
		background-color: red;
	}
	
	.east {
		background-color: blue;
	}
	
	.south {
		background-color: orange;
	}
	
	.west {
		background-color: green;
		width: 100%;
		height: 100%;
	}
	
	.header {
		font-size: 30px;
		font-weight: bold;
		color: white;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:DockLayoutPanel unit="EM"
			width="100%" height="100%">
			<g:north size="5">
				<g:HorizontalPanel styleName="{style.north}"
					horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE"
					width="100%" height="100%">
					<g:Label text="DÃ˜KBook" styleName="{style.header}" />
				</g:HorizontalPanel>
			</g:north>
			<g:south size="6">
				<g:HTMLPanel styleName="{style.south}" />
			</g:south>
			<g:east size="7">
				<g:HTMLPanel styleName="{style.east}" />
			</g:east>
			<g:west size="7">
				<g:HTMLPanel styleName="{style.west}">
					<g:VerticalPanel spacing="8" horizontalAlignment="center"
						width="100%">
						<g:Button text="Profile" width="65px" ui:field="profileBtn" />
						<g:Button text="Friends" width="65px" ui:field="friendsBtn" />
						<g:Button text="Settings" width="65px" ui:field="settingsBtn" />
						<g:Button text="Logout" width="65px" ui:field="logoutBtn" />
					</g:VerticalPanel>
				</g:HTMLPanel>
			</g:west>
			<g:center>
				<g:DeckLayoutPanel ui:field="centerPanel"/>
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 