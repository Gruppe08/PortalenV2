<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	.header{
	font-size: 24px;
	font-weight: bold;
	}
	
	</ui:style>
	
	<g:HTMLPanel>
		<g:VerticalPanel spacing="15">
			<g:Label text="Settings" styleName="{style.header}"/>
			<g:FlowPanel>
				<g:InlineLabel text="Password:" />
				<g:TextBox ui:field="passwordBox"/>
			</g:FlowPanel>
			<g:FlowPanel>	
						<g:RadioButton name="sexSettings" text="Male" ui:field="sexMaleRBtn"/>
						<g:RadioButton name="sexSettings" text="Female" ui:field="sexFemaleRBtn"/>
					</g:FlowPanel>
			<g:Label text="Description:"/>
			<g:TextArea ui:field="descriptionArea" width="400px" height="300px"/>
			<g:Button ui:field="changeProfileBtn" text="Change"/>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 