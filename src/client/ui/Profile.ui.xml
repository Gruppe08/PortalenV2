<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.header {
		font-size: 24px;
		font-weight: bold;
	}
	
	.lblUsername {
		font-size: 20px;
		font-weight: bold;
	}
	</ui:style>

	<g:HTMLPanel>
		<g:VerticalPanel spacing="15">
			<g:Label text="Profile" styleName="{style.header}" />
			<g:HorizontalPanel>
				<g:Image ui:field="profilePicture" width="200px" height="200px" />
				<g:VerticalPanel spacing="10">
					<g:Label ui:field="usernameLabel" styleName="{style.lblUsername}" />
					<g:FlowPanel>
						<g:RadioButton name="sex" text="Male" enabled="false"
							ui:field="sexMaleRBtn" />
						<g:RadioButton name="sex" text="Female" enabled="false"
							ui:field="sexFemaleRBtn" />
					</g:FlowPanel>
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:Label text="Description:" />
			<g:TextArea enabled="false" ui:field="descriptionArea"
				width="400px" height="300px" />
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 